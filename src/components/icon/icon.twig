{# Used to leverage SVG icon using <use /> #}

{# List of viewBoxes #}
{% set viewBoxes = {
	"aesthetic": "0 0 65 64",
	"case": "0 0 43 41",
	"facebook": "0 0 24 25",
	"google-plus": "0 0 36 23",
	"instagram": "0 0 24 25",
	"linkedin": "0 0 25 25",
	"location": "0 0 11 17",
	"mail": "0 0 17 11",
	"menu": "0 0 16 14",
	"neat-icon": "0 0 60 65",
	"phone": "0 0 12 17",
	"pinterest": "0 0 25 25",
	"plane": "0 0 40 41",
	"safe": "0 0 65 60",
	"twitter": "0 0 30 24",
	"wallet": "0 0 42 43"
} %}

{% if icon %}
	{# Default viewBox is 0 0 20 20 #}
	{% set viewBox = viewBoxes[icon] ? viewBoxes[icon] : "0 0 20 20"%}

	<svg class="icon" viewBox="{{ viewBox }}"><use xlink:href="#{{ icon }}" x="0" y="0"/></svg>
{% endif %}
